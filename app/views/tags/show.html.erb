

  <span style="font-size:15px; margin:2px;">
   <i class="fa-solid fa-tag size"></i>
     <%= @tag.name%>
  </span>
  
<div class="col-md-12">
<div class="card border-secondary mb-3" style="max-width: 30rem;">
  <%  @tag_user_posts.each do |post| %>
    <%#タグに紐づく自身の投稿を全件取得%>
 <div class="card-header"><%= post.user.decorate.full_name %></div>
  <div class="card-body text-dark">
    <p class="card-text"><%= post.content%></p>
   <br>
  <% if current_user.id == post.user.id %>
    <%= link_to '詳細', post_path(post) %>
    <%= link_to '削除', post_path(post), method: :delete, data: {confirm: '削除しますか？'} %>
  <% end %>
    <br>
    <%= post.created_at.strftime('%Y/%m/%d') %>
    <br>
  </div>
   <% end %>
  </div>
</div>