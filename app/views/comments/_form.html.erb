<!-- コメントフォーム -->
<div class="row mb-3">
  <div class="col-lg-8 offset-lg-0">
    <%= form_with model: comment, url: [post, comment], id: 'new_comment' do |f| %>
      <%= f.label "コメント" %>
      <%= f.text_area :body, class: 'form-control mb-3', id: 'js-new-comment-body', row: 4, placeholder: Comment.human_attribute_name("コメント") %>
      <%= f.submit 'コメントする', class: 'btn btn-outline-secondary' %>
    <% end %>
  </div>
</div>