<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_post_path(@post), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_post_path(@post), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:id) %></th>
          <td><%= @post.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:full_name) %></th>
          <td><%= @post.user.decorate.full_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:content) %></th>
          <td><%= @post.content %></td>
        </tr>
         <tr>
          <th scope="row"><%= Post.human_attribute_name(:tag) %></th>
          <td><%= @post.tags.map(&:name).join(', ')%></td>
        </tr>
        <tr>
          <th scope="row"><%= Post.human_attribute_name(:created_at) %></th>
          <td><%= l @post.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
