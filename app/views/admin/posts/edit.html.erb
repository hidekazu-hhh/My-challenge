<% content_for(:title, @post.content) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with model: @post, url: admin_post_path(@post), local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :start_time %>
          <%= f.date_select :start_time, class: 'form-control', rows: 10 %>
        </div>
        <div class="form-group">
          <%= f.label :tag %>
          <%= f.text_field :tag, value: @post.tags.pluck(:name), class: 'form-control mb-3' %>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>



