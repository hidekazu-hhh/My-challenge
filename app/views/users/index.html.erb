<h3>ユーザー</h3>
<div class="col-md-12">
<div class="card border-secondary mb-3" style="max-width: 30rem;">
<% @users.each do |user| %>
  <div class="card-header">
   <% if user.avatar_image.url.present? %>
        <div class='mt-3 mb-3'>
          <%= image_tag user.avatar_image.url,
                        class: 'rounded-circle',
                        id: 'preview',
                        size: '65x65' %>
        </div>
         <% else %>
         <div class='mt-3 mb-3'>
         <%= image_pack_tag 'media/images/sample.jpeg',
                        class: 'rounded-circle',
                        id: 'preview',
                        size: '65x65' %>
        </div>
        <% end %>
  <%= link_to user.name , user_path(user) %>
  </div>
  <div class="card-body text-dark">
    <p class="card-text"><%= %></p>
   <br>
  
    <br>
    <span style="font-size:15px; margin:2px;">
       <i class="fa-solid fa-tag size"></i>
      <%= user.tags.distinct.map(&:name).join(' ')%>
    </span>
   
    <br>
  </div>
  <% end %>
</div>
</div>