<div class="row">
  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">今月</h5>
        <p class="card-text"> <h5>学習数：<%= @month_record.count[Date.today.month] %></h5></p>
      </div>
    </div>
  </div>
  <div style="margin-top:10px; margin-bottom:10px; margin-left:10px;">
<div class="text-left">
<%= link_to '戻る', user_path(@user), class:"btn btn-outline-secondary"  %>
</div>
</div>

<div class="simple-calendar mb-14">
<%#カレンダー %>
<div class="col-md-16">
  <%= month_calendar events: @posts do |date, posts| %>
  <%= date.day %>
  <% posts.each do |post| %>
    <div>
      <%=post.tags.map(&:name).join(', ') %>
    </div>
  <% end %>
  <% end %>
</div>
</div>