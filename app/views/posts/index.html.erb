<div class="text-right">
<%= link_to '学習を登録する', new_post_path, class: "btn btn-outline-secondary"%>
</div>


<div>
  <% @tags.each do |tag| %>
      <%= link_to "#{tag.name} (  #{tag.posts.count} )", tag_path(tag) %>
  <% end %>
</div>
<h3>投稿一覧</h3>
<%= render 'search_form', url: posts_path, q: @q %>

<div class="col-md-12">
<div class="card border-secondary mb-3" style="max-width: 30rem;">
<% @posts.each do |post| %>
  <div class="card-header"><%= post.user.decorate.full_name %></div>
  <div class="card-body text-dark">
    <p class="card-text"><%= post.content%></p>
   <br>
 <% if post.user.avatar_image.url.present? %>
        <div class='mt-3 mb-3'>
          <%= image_tag post.user.avatar_image.url,
                        class: 'rounded-circle',
                        id: 'preview',
                        size: '50x50' %>
        </div>
         <% else %>
         <div class='mt-3 mb-3'>
         <%= image_pack_tag 'media/images/sample.jpeg',
                        class: 'rounded-circle',
                        id: 'preview',
                        size: '50x50' %>
        </div>
      <% end %>

  <% if current_user.id == post.user.id %>
    <%= link_to '詳細', post_path(post) %>
    <%= link_to '削除', post_path(post), method: :delete, data: {confirm: '削除しますか？'} %>
  <% end %>
    <br>
     <%= post.created_at.strftime('%Y/%m/%d') %>
    <br>
    <br>
     <%= post.tags.map(&:name).join(', ')%>
    <br>
  </div>
  <% end %>
</div>
<%= paginate @posts, theme: 'twitter-bootstrap-4' %>
</div>