<div class="text-right">
<%= link_to '学習を登録する', new_post_path, class: "btn btn-outline-secondary"%>
</div>

<%# <%= link_to 'Tags List', tags_path %> %>
<div>
  <% @tags.each do |tag| %>
    <p>
      <%# タグの名前と、関連付く記事数を表示 %>
      <%= link_to "#{tag.name} (  #{tag.posts.count} )", tag_path(tag) %>
    </p>
  <% end %>
</div>


<div class="col-md-9">
<%= month_calendar events: @posts do |date, posts| %>
  <%= date.day %>
  <% posts.each do |post| %>
    <div>
      <%=post.tags.map(&:name).join(', ') %>
    </div>
  <% end %>
<% end %>
</div>
